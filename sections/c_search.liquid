{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .search-{{ section.id }}
  ul li a {
    position: relative;
  }

  .search-{{ section.id }}
  ul {
    width: 75%;
    margin: 0 auto;
    list-style: none;
    padding: 0;
  }

  .search-{{ section.id }}
  li {
    display: inline-block;
    padding: 0.5em;
  }

  .search-{{ section.id }}
  a {
    font-size: 13px;
    text-decoration: none;
    padding: 0.3em 0.6em;
    color: {{ section.settings.color }};
    border: 1px solid{{ section.settings.color }};
    background-color: {{ section.settings.bk_color }};
    border-radius: {{ section.settings.radius }}px;
    -webkit-transition: 0.2s;
    transition: 0.2s;
  }

  .search-{{ section.id }}a:hover {
    color: {{ section.settings.hover_color }};
    border: 1px solid{{ section.settings.hover_color }};
    background-color: {{ section.settings.hover_bk_color }};
    opacity: {{ section.settings.hover_opacity }};
  }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding search-{{ section.id }}">
    {%- assign tags = section.settings.tags_list | split: ',' -%}
    <ul>
      {%- for tag in tags -%}
        <li>
          <a href="../search?q={{ tag }}">#{{ tag }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

{% schema %}
  {
    "name": "サジェスト検索",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "html",
        "id": "tags_list",
        "label": "タグ",
        "info": "カンマで区切ってください"
      },
      {
        "type": "color",
        "id": "color",
        "label": "タグカラー",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "bk_color",
        "label": "背景カラー",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "hover_color",
        "label": "ホバー時のリンクの色",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "hover_bk_color",
        "label": "ホバー時の背景色",
        "default": "#000000"
      }, {
        "type": "range",
        "id": "radius",
        "min": 0,
        "max": 40,
        "step": 1,
        "unit": "px",
        "label": "タグ半径",
        "default": 4
      }, {
        "type": "range",
        "id": "hover_opacity",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "label": "透明度",
        "default": 0.6
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "presets": [
      {
        "name": "サジェスト検索"
      }
    ]
  }
{% endschema %}